    <http:listener-config name="Retail_Api_Spec-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="8081" />
    </http:listener-config>
    <apikit:config name="Retail_Api_Spec-config" api="Retail_Api_Spec.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <flow name="Retail_Api_Spec-main">
        <http:listener config-ref="Retail_Api_Spec-httpListenerConfig" path="/api/*">
            <http:response statusCode="#[vars.httpStatus default 200]">
